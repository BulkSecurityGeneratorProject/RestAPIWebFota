<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
	
	<!-- Added garment type fields to patient_info and patient_vest_device_history table. -->
	<changeSet author="jhipster" id="20160822034818">
		<addColumn tableName="PATIENT_INFO">
        	<column name="primary_diagnosis" type="varchar(255)"/>
        </addColumn>
        <addColumn tableName="PATIENT_INFO">
        	<column name="garment_type" type="varchar(255)"/>
        </addColumn>
        <addColumn tableName="PATIENT_INFO">
        	<column name="garment_size" type="varchar(255)"/>
        </addColumn>
   		<addColumn tableName="PATIENT_INFO">
        	<column name="garment_color" type="varchar(255)"/>
        </addColumn>
        
        <addColumn tableName="PATIENT_VEST_DEVICE_HISTORY">
        	<column name="garment_type" type="varchar(255)"/>
        </addColumn>
        <addColumn tableName="PATIENT_VEST_DEVICE_HISTORY">
        	<column name="garment_size" type="varchar(255)"/>
        </addColumn>
   		<addColumn tableName="PATIENT_VEST_DEVICE_HISTORY">
        	<column name="garment_color" type="varchar(255)"/>
        </addColumn>
        <loadUpdateData encoding="UTF-8"
			file="config/liquibase/hillrom_type_code_values_garment.csv" separator="," tableName="HILLROM_TYPE_CODE_VALUES" primaryKey="id">
		</loadUpdateData>
	</changeSet>
</databaseChangeLog>
