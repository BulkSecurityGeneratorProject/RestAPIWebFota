<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Updated the entity USER_PATIENT_ASSOC.
    -->
    <changeSet id="20150806112900" author="jhipster">
        <dropTable tableName="USER_PATIENT_ASSOC"/>
        
        <createTable tableName="USER_PATIENT_ASSOC">
			<column name="user_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="patient_id" type="varchar(45)">
				<constraints nullable="false" />
			</column>
			<column name="user_role" type="varchar(45)"/>
        	<column name="relation_label" type="varchar(45)"/>
		</createTable>
	
		<addPrimaryKey columnNames="user_id,patient_id"
            constraintName="pk_user_patient_assoc"
            tableName="USER_PATIENT_ASSOC"/>

		<addForeignKeyConstraint baseColumnNames="user_id"
			baseTableName="USER_PATIENT_ASSOC" constraintName="fk_upa_user_id"
			referencedColumnNames="id" referencedTableName="USER" />
			
		<addForeignKeyConstraint baseColumnNames="patient_id"
			baseTableName="USER_PATIENT_ASSOC" constraintName="fk_upa_patient_id"
			referencedColumnNames="id" referencedTableName="PATIENT_INFO" />
        
    </changeSet>
</databaseChangeLog>