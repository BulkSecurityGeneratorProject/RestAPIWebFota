<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Clinic.
    -->
    <changeSet id="20150802160200" author="jhipster">
        <createTable tableName="CLINIC">
            <column name="id" type="varchar(255)" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="address" type="varchar(255)"/>
            <column name="zipcode" type="integer"/>
            <column name="city" type="varchar(255)"/>
            <column name="state" type="varchar(255)"/>
            <column name="phone_number" type="bigint"/>
            <column name="fax_number" type="bigint"/>
            <column name="hillrom_id" type="varchar(255)"/>
            <column name="parent_clinic_id" type="varchar(255)"/>
            <column name="is_deleted" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
			<column name="is_parent" type="boolean" valueBoolean="false"/>
			<column name="clinic_admin_id" type="bigint" />
			<column name="created_date" type="timestamp" defaultValueComputed="${now}"/>
        </createTable>        
        
        <addForeignKeyConstraint baseColumnNames="clinic_admin_id"
                                 baseTableName="CLINIC"
                                 constraintName="fk_clinic_admin_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="USER"/>
    </changeSet>
</databaseChangeLog>
