<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Clinic.
    -->
    <changeSet id="20150802161000" author="jhipster">
        <createTable tableName="CLINIC_USER_ASSOC">
            <column name="users_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="clinics_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
                                
        <addPrimaryKey columnNames="clinics_id, users_id" tableName="CLINIC_USER_ASSOC"/>

        <addForeignKeyConstraint baseColumnNames="clinics_id"
                                 baseTableName="CLINIC_USER_ASSOC"
                                 constraintName="fk_cua_clinic_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CLINIC"/>

        <addForeignKeyConstraint baseColumnNames="users_id"
                                 baseTableName="CLINIC_USER_ASSOC"
                                 constraintName="fk_cua_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="USER"/>
        
    </changeSet>
</databaseChangeLog>
