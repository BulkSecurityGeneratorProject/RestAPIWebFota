<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />
	<!-- Added the entity UserExtension. -->
	<changeSet id="20150812191500" author="jhipster">
	
		<createTable tableName="PATIENT_VEST_DEVICE_HISTORY">
			<column name="patient_id" type="varchar(45)">
				<constraints nullable="false" />
			</column>
			<column name="serial_number" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="bluetooth_id" type="varchar(255)" />
			<column name="hub_id" type="varchar(255)" />
			<column name="created_by" type="varchar(50)" />
			<column name="created_date" type="timestamp" defaultValueDate="${now}">
				<constraints nullable="false" />
			</column>
			<column name="last_modified_by" type="varchar(50)" />
			<column name="last_modified_date" type="timestamp" />
			<column name="is_active" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
		</createTable>
		
		<addPrimaryKey columnNames="patient_id, serial_number"
            constraintName="pk_patient_device_assoc"
            tableName="PATIENT_VEST_DEVICE_HISTORY"/>

		<addForeignKeyConstraint baseColumnNames="patient_id"
			baseTableName="PATIENT_VEST_DEVICE_HISTORY" constraintName="fk_pvd_patient_id"
			referencedColumnNames="id" referencedTableName="PATIENT_INFO" />
		
	</changeSet>
</databaseChangeLog>

		