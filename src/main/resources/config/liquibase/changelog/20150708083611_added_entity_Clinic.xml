<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Clinic.
    -->
    <changeSet id="20150708083611" author="jhipster">
        <createTable tableName="CLINIC">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="address" type="varchar(255)"/>
            <column name="zipcode" type="integer"/>
            <column name="city" type="varchar(255)"/>
            <column name="state" type="varchar(255)"/>
            <column name="phone_number" type="bigint"/>
            <column name="fax_number" type="bigint"/>
            <column name="hillrom_id" type="varchar(255)"/>
            <column name="parent_clinic_id" type="bigint(20)"/>
            <column name="npi_number" type="varchar(255)"/>
            <column name="is_deleted" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
        </createTable>
                      
        <createTable tableName="CLINIC_USER_ASSOC">
            <column name="users_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="clinics_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
                                
        <addPrimaryKey columnNames="clinics_id, users_id" tableName="CLINIC_USER_ASSOC"/>

        <addForeignKeyConstraint baseColumnNames="clinics_id"
                                 baseTableName="CLINIC_USER_ASSOC"
                                 constraintName="fk_clinic_user_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CLINIC"/>

        <addForeignKeyConstraint baseColumnNames="users_id"
                                 baseTableName="CLINIC_USER_ASSOC"
                                 constraintName="fk_user_user_clinic_id"
                                 referencedColumnNames="id"
                                 referencedTableName="USER"/>
        
        <createTable tableName="CLINIC_PATIENTS_ASSOC">
            <column name="patients_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="clinics_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="patient_mrn" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="clinics_id, patients_id" tableName="CLINIC_PATIENTS_ASSOC"/>

        <addForeignKeyConstraint baseColumnNames="clinics_id"
                                 baseTableName="CLINIC_PATIENTS_ASSOC"
                                 constraintName="fk_clinic_patients_patientinfo_id"
                                 referencedColumnNames="id"
                                 referencedTableName="CLINIC"/>

        <addForeignKeyConstraint baseColumnNames="patients_id"
                                 baseTableName="CLINIC_PATIENTS_ASSOC"
                                 constraintName="fk_patientinfo_patients_clinic_id"
                                 referencedColumnNames="id"
                                 referencedTableName="PATIENT_INFO"/>
        
    </changeSet>
</databaseChangeLog>
