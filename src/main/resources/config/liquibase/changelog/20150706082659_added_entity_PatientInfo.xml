<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity PatientInfo.
    -->
    <changeSet id="20150706082659" author="jhipster">
        <createTable tableName="PATIENT_INFO">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mrn" type="varchar(255)"/>
            <column name="hillrom_id" type="varchar(255)"/>
            <column name="hub_id" type="varchar(255)"/>
            <column name="serial_number" type="varchar(255)"/>
            <column name="bluetooth_id" type="varchar(255)"/>
            <column name="title" type="varchar(255)"/>
            <column name="first_name" type="varchar(255)"/>
            <column name="middle_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="dob" type="date"/>
            <column name="email" type="varchar(255)"/>
            <column name="web_login_created" type="bit"/>
            <column name="is_deleted" type="bit"/>
        </createTable>
        
        <createTable tableName="USER_PATIENT_ASSOC">
			<column name="user_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="patient_id" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>
		
		<addPrimaryKey columnNames="user_id, patient_id"
			tableName="USER_PATIENT_ASSOC" />

		<addForeignKeyConstraint baseColumnNames="user_id"
			baseTableName="USER_PATIENT_ASSOC" constraintName="fk_upa_user_id"
			referencedColumnNames="id" referencedTableName="USER" />
		<addForeignKeyConstraint baseColumnNames="patient_id"
			baseTableName="USER_PATIENT_ASSOC" constraintName="fk_upa_patient_id"
			referencedColumnNames="id" referencedTableName="PATIENT_INFO" />
        
    </changeSet>
</databaseChangeLog>
