<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity UserExtension.
    -->
    <changeSet id="20150717110234" author="jhipster">
        <addColumn tableName="CLINIC">
        	<column name="is_parent" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
        </addColumn>
        <dropColumn tableName="CLINIC" columnName="npi_number"/>
        
        <addColumn tableName="CLINIC_PATIENTS_ASSOC">
        	<column name="notes" type="text" />
        	<column name="is_deleted" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
        </addColumn>
        <renameColumn tableName="CLINIC_PATIENTS_ASSOC" oldColumnName="patient_mrn" newColumnName="mrn_id" columnDataType="varchar(15)"/>
        
        <addColumn tableName="PATIENT_INFO">
        	<column name="gender" type="varchar(10)" />
        	<column name="lang_key" type="varchar(10)" />
        	<column name="expired" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
			<column name="expired_date" type="timestamp">
				<constraints nullable="true" />
			</column>
			<column name="address" type="varchar(255)"/>
            <column name="city" type="varchar(255)"/>
            <column name="state" type="varchar(255)"/>
        </addColumn>
        <dropColumn tableName="PATIENT_INFO" columnName="mrn"/>
        <dropColumn tableName="PATIENT_INFO" columnName="is_deleted"/>
        
        <addColumn tableName="USER">
        	<column name="gender" type="varchar(10)" />
        	<column name="zipcode" type="integer"/>
        	<column name="terms_condition_accepted" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
			<column name="terms_condition_accepted_date" type="timestamp">
				<constraints nullable="true" />
			</column>
        </addColumn>
        
        <addColumn tableName="USER_EXTENSION">
        	<column name="npi_number" type="varchar(15)"/>
        </addColumn>
        <dropColumn tableName="USER_EXTENSION" columnName="zipcode"/>
        
        <addColumn tableName="USER_PATIENT_ASSOC">
        	<column name="user_role" type="varchar(45)"/>
        	<column name="relation_label" type="varchar(45)"/>
        </addColumn>
        
    </changeSet>
</databaseChangeLog>
