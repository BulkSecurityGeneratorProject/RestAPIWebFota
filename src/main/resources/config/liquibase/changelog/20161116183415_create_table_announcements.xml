<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />

	<property name="autoIncrement" value="true" dbms="mysql,h2,postgresql" />
	<property name="autoIncrement" value="false" dbms="oracle" />

	<changeSet id="20161114183415" author="LnT Technology Services">
		<createTable tableName="ANNOUNCEMENTS">
			<column name="id" type="bigint(20)" autoIncrement="${autoIncrement}">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(255)">
				<constraints nullable="false"/>
			</column>
			<column name="subject" type="tinytext">
				<constraints nullable="true"/>
			</column>			
			<column name="start_date" type="timestamp" >
				<constraints nullable="false"/>
			</column>
			<column name="end_date" type="timestamp" >
				<constraints nullable="false"/>
			</column>
			<column name="created_date" type="timestamp" >
				<constraints nullable="false"/>
			</column>
			<column name="modified_date" type="timestamp" >
				<constraints nullable="false"/>
			</column>
			<column name="send_to" type="varchar(255)" >
				<constraints nullable="true"/>
			</column>
			<column name="clinic_type" type="varchar(255)">
        		<constraints nullable="true" />
        	</column>
			<column name="pdf_file_path" type="varchar(255)">
				<constraints nullable="true"/>
			</column>	
			<column name="patient_type" type="varchar(255)">
				<constraints nullable="true"/>
			</column>		
			<column name="is_deleted" type="boolean" defaultValueComputed="0"/>
		</createTable>
		<modifySql dbms="mysql">
			<append value="ENGINE=INNODB CHARSET=latin1"/>	
		</modifySql>
	</changeSet>
	
</databaseChangeLog>